{
  "$schema": "http://json-schema.org/draft-03/schema#",
  "type": "object",
  "title": "App Get Receive",
  "description": "A message with requested application",
  "properties": {
    "echo_req": {
      "title":"Echo request",
      "description":"Echo of the request made",
      "required": 1
    },
    "app_get": {
      "type": "object",
      "title": "Application object",
      "properties": {
        "name": {
          "type": "string",
          "description":"Application name",
          "required": 1
        },
        "app_id": {
          "type": "integer",
          "description":"Application id",
          "required": 1
        },
        "redirect_uri": {
          "type": "string",
          "description":"Application redirect_uri",
          "required": 1
        },
        "verification_uri": {
          "type": "string",
          "description":"Application verification_uri",
          "required": 1
        },
        "homepage": {
          "type": "string",
          "description":"Application's homepage",
          "required": 1
        },
        "github": {
          "type": "string",
          "description":"Application's GitHub page (for open-source projects)",
          "required": 1
        },
        "appstore": {
          "type": "string",
          "description":"Application's App Store URL",
          "required": 1
        },
        "googleplay": {
          "type": "string",
          "description":"Application's Google Play URL",
          "required": 1
        },
        "app_markup_percentage": {
          "type": "number",
          "description": "Markup added to contract prices (as a percentage of contract payout)",
          "required": 1
        }
      }
    },
    "msg_type": {
      "type": "string",
      "description": "app_get",
      "required": 1
    },
    "req_id": {
      "type": "integer",
      "description": "Optional field send in request to map to response, present only when request contains req_id"
    }
  }
}
